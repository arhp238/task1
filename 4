#include <iostream>

int main() {
    int seconds;
    std::cout << "введите время: ";
    std::cin >> seconds;

    int hours = seconds / 3600;
    seconds %= 3600;
    int minutes = seconds / 60;
    seconds %= 60;

    std::cout << hours << " час, " << minutes << " мин, " << seconds << " сек" << std::endl;

    return 0;
}
